{
    "manifest_version": 3,
    "name": "Regex Finder",
    "description": "Recherche avancée sur la page via expressions régulières, avec surbrillance et navigation.",
    "version": "0.1.0",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content.js"],
        "css": ["src/highlight.css"],
        "run_at": "document_idle"
      }
    ]
  }
  